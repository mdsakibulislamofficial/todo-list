<%- include("header"); -%>

<div class="box" id="heading">
  <h1><%= itemTitle %></h1>
</div>

<div class="box">


  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
      required
    />
    <button type="submit" name="list" value="<%=itemTitle%>">+</button>
  </form>


  <% for(var i = 0 ; i < newListItems.length ; i++ ){ %>
    <form action="/delete" method="post">
  <div class="item">

    <input type="checkbox" name = "checkbox" onChange="this.form.submit()" value="<%= newListItems[i].id%>" >
    <p><%=newListItems[i].name%></p>
  </div>
</form>
  <%}%>

</div>

<%- include("footer"); -%>
