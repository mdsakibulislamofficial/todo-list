<%- include("header"); -%>

<div class="box" id="heading">
  <h1><%= itemTitle %></h1>
</div>

<div class="box">


  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
      required
    />
    <button type="submit" name="list" value="<%=itemTitle%>">+</button>
  </form>


  <% for(var i = 0 ; i < newListItems.length ; i++ ){ %>
  <div class="item">
    <input type="checkbox" />
    <p><%=newListItems[i]%></p>
  </div>
  <%}%>

</div>

<%- include("footer"); -%>
